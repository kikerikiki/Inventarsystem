@model Inventarsystem1.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="card p-4 shadow-sm">
                <h3 class="text-center text-primary mb-4">@ViewData["Title"]</h3>
                <p class="text-center text-muted">Login mit Email und Kennwort</p>
                <hr />
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Email Input -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email eingeben" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Passwort Input -->
                    <div class="mb-3">
                        <label asp-for="Passwort" class="form-label"></label>
                        <input asp-for="Passwort" class="form-control" type="password" placeholder="Passwort eingeben" />
                        <span asp-validation-for="Passwort" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
