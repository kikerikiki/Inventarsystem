@model IEnumerable<Inventarsystem1.Models.Produkt>

@{
    ViewData["Title"] = "Produkt Übersicht";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Produkt Übersicht</h1>

    <!-- Suchleiste -->
    <div class="input-group mb-2">
        <input type="text" class="form-control" placeholder="Produkte suchen..." aria-label="Produkte suchen" aria-describedby="search-button">
        <button class="btn btn-outline-secondary" type="button" id="search-button">Suchen</button>
    </div>

    <!-- Ausgegrauter Text unter der Suchleiste -->
    <p class="text-muted mb-4" style="font-size: 0.9em;">5 von 5 Produkten</p>

    <p>
        <a class="btn btn-success mb-3" asp-action="Create">Neues Produkt erstellen</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Produktname)</th>
                <th>@Html.DisplayNameFor(model => model.First().Kommentar)</th>
                <th>@Html.DisplayNameFor(model => model.First().Datum)</th>
                <th>Artikel</th>
                <th>Raum</th>
                <th>User</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Produktname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Kommentar)</td>
                    <td>@item.Datum.ToString("dd.MM.yyyy")</td>
                    <td>@(item.Artikel != null ? item.Artikel.ArtikelName : "N/A")</td>
                    <td>@(item.Raum != null ? item.Raum.RaumName : "N/A")</td>
                    <td>@(item.User != null ? item.User.Email : "N/A")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProduktId">Bearbeiten</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.ProduktId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProduktId">Löschen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
