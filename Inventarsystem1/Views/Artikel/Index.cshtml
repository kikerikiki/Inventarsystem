@model IEnumerable<Inventarsystem1.Models.Artikel>

@{
    ViewData["Title"] = "Artikel Übersicht";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Artikel Übersicht</h1>

    <p>
        <a class="btn btn-success mb-3" asp-action="Create">Neuen Artikel erstellen</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ArtikelName)</th>
                <th>@Html.DisplayNameFor(model => model.HatSeriennummer)</th>
                <th>@Html.DisplayNameFor(model => model.Kategorie)</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ArtikelName)</td>
                    <td>
                        @(item.HatSeriennummer.HasValue && item.HatSeriennummer.Value ? "Ja" : "Nein")
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Kategorie.KategorieName)</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ArtikelId">Bearbeiten</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.ArtikelId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ArtikelId">Löschen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
